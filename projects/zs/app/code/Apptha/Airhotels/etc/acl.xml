<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
  <acl>
    <resources>
      <resource id="Magento_Backend::admin">
        <resource id="Apptha_Airhotels::main_menu" title="Apptha Airhotels" sortOrder="20">
        <resource id="Apptha_Airhotels::settings" title="Configurations" sortOrder="4" />
        <resource id="Apptha_Airhotels::host_orders" title="Bookings" sortOrder="21"/>
        <resource id="Apptha_Airhotels::airhotelsadmin_profile" title="Manage Profile" sortOrder="22"/>
        <resource id="Apptha_Airhotels::manage_payments" title="Manage Reviews" sortOrder="23" />
        <resource id="Apptha_Airhotels::airhotelsadmin_reviews" title="Host Payments" sortOrder="24" />
        <resource id="Apptha_Airhotels::airhotelsadmin_verifyhosts" title="Manage Host Verification" sortOrder="25" />
        <resource id="Apptha_Airhotels::airhotelsadmin_catalog_category" title="Manage Categories" sortOrder="26" />
        <resource id="Apptha_Airhotels::airhotelsadmin_review_rating" title="Manage Rating" sortOrder="27" />
        <resource id="Apptha_Airhotels::airhotelsadmin_cities" title="Manage Cities" sortOrder="28" />
        <resource id="Apptha_Airhotels::manage_products" title="Manage Listings" sortOrder="29" />
        </resource>
        <resource id="Magento_Backend::stores">
          <resource id="Magento_Backend::stores_settings">
            <resource id="Magento_Config::config">
              <resource id="Apptha_Airhotels::system_config" title="Apptha Airhotels Section" />
            </resource>
          </resource>
        </resource>
      </resource>
    </resources>
  </acl>
</config>