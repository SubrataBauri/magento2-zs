<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
     <referenceContainer name="page.top">
           <container name="topnavigation" as="topnavigation" label="Top Navigation" htmlTag="div" htmlClass="topnavigation">
                 <block class="Apptha\Airhotels\Block\Navigation\Top" name="page.main.topnavigation" template="Magento_Theme::html/navigation/top.phtml"/>
              </container>
        </referenceContainer>
          <referenceContainer name="sidebar.additional">
               <block class="Apptha\Airhotels\Block\Profile\Profiledashboardleft"
                    name="airhotels_profiledashboard" template="airhotels/profile/profilequicklinks.phtml" />
          </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Newsletter" name="customer_newsletter" cacheable="false">
                <container name="customer.newsletter.form.before" as="form_before" label="Newsletter Subscription Form Before" htmlTag="div" htmlClass="rewards"/>
            </block>
        </referenceContainer>
    </body>
</page>
